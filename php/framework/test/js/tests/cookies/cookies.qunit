(function (fwork) {
    "use strict";

    var DAYS_BEFORE_EXP = 1;

    module("Cookies", {
        teardown: function () {
            fwork.cookies.clearAll();
        }
    });

    test("Test cookie is created", function () {
        var cookieName = 'testCookie',
            cookieValue = "someValue";

        ok(!fwork.cookies.exists(cookieName), "cookie does not exist before creation");
        fwork.cookies.create(cookieName, cookieValue, DAYS_BEFORE_EXP);

        ok(fwork.cookies.exists(cookieName), "cookie exists after creation");
        strictEqual("someValue", fwork.cookies.value(cookieName));
    });

    test("Test cookie is removed", function () {
        var cookieToDelete = "toDelete";
        fwork.cookies.create(cookieToDelete, "will be deleted in this test", DAYS_BEFORE_EXP);
        ok(fwork.cookies.exists(cookieToDelete), "cookie exists before deletion");

        fwork.cookies.remove(cookieToDelete);

        ok(!fwork.cookies.exists(cookieToDelete), "cookie exists does not exist after deletion");
    });
}(travi.framework));